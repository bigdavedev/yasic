{
	"version": 6,
	"include": [
		"base.json",
		"compilers.json",
		"generators.json"
	],
	"configurePresets": [
		{
			"name": "ci-documentation",
			"displayName": "Generate documentation",
			"binaryDir": "build/${presetName}",
			"inherits": [
				"base",
				"clang",
				"ninja"
			],
			"cacheVariables": {
				"YASIC_ENABLE_TESTING": {
					"type": "BOOL",
					"value": "FALSE"
				},
				"YASIC_BUILD_DOCS": {
					"type": "BOOL",
					"value": "TRUE"
				}
			}
		}
	],
	"buildPresets": [
		{
			"name": "ci-documentation",
			"displayName": "Generate documentation",
			"configurePreset": "ci-documentation",
			"targets": "docs"
		}
	],
	"workflowPresets": [
		{
			"name": "ci-documentation",
			"displayName": "Generate Documentation",
			"steps": [
				{ "type": "configure", "name": "ci-documentation" },
				{ "type": "build",     "name": "ci-documentation" }
			]
		}
	]
}

