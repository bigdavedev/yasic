{
	"version": 6,
	"include": [
		"base.json",
		"compilers.json",
		"generators.json"
	],
	"configurePresets": [
		{
			"name": "ci-check-clang-tidy",
			"displayName": "Clang Tidy",
			"binaryDir": "build/${presetName}",
			"inherits": [
				"base",
				"clang",
				"ninja"
			],
			"cacheVariables": {
				"YASIC_ENABLE_CLANG_TIDY": {
					"type": "BOOL",
					"value": "TRUE"
				},
				"YASIC_ENABLE_TESTING": {
					"type": "BOOL",
					"value": "FALSE"
				},
				"YASIC_ENABLE_PACKAGING": {
					"type": "BOOL",
					"value": "FALSE"
				},
				"YASIC_BUILD_DOCS": {
					"type": "BOOL",
					"value": "FALSE"
				}
			}
		}
	],
	"buildPresets": [
		{
			"name": "ci-check-clang-tidy",
			"displayName": "Clang Tidy",
			"configurePreset": "ci-check-clang-tidy",
			"targets": "all"
		}
	],
	"workflowPresets": [
		{
			"name": "ci-check-clang-tidy",
			"displayName": "Clang Tidy",
			"steps": [
				{ "type": "configure", "name": "ci-check-clang-tidy" },
				{ "type": "build",     "name": "ci-check-clang-tidy" }
			]
		}
	]
}
